package day1_pakage;
// deposit  si = p*r*n/100
import java.util.Scanner;

public class example3deposit {
				
	public static void main(String[] args) {
		int principlesal , year;
		float rate,si , amount;
		
		Scanner ob = new Scanner(System.in);
		System.out.println("Enter Principle amount to calcumate net salary: ");
		principlesal=ob.nextInt();
		System.out.println("Enter number of  year :");
		year = ob.nextInt();
		System.out.println("Enter rate of intrest :");
		rate = ob.nextFloat();
		ob.close();
		si = principlesal * rate * year / 100;
		amount = si + principlesal;
		System.out.println("Simple intrest : "+si);
		System.out.println("Amount ="+ amount);
	}
}
